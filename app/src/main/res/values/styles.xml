<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryDark</item>
        <item name="colorError">@color/colorRed</item>
        <item name="colorOnError">@color/colorWhite</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <item name="android:windowBackground">@color/colorWindowBackground</item>
        <item name="android:navigationBarColor">@color/colorNavigationBarColor</item>
        <item name="android:textColorHint">@color/colorHints</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:fontFamily">@font/muli_bold</item>
    </style>

</resources>
